.preview
	margin-bottom 50px
	position relative
	padding-top 225px
	background #fff
	border-radius 4px
	font-family 'Source Sans Pro', sans-serif
	transition .25s ease-out box-shadow
	
	@media only screen and (max-width 767px)
		z-index 3
		padding-top 85px
		border-top 2px solid background_color
		&:last-child
			margin-bottom 0
	
	&:hover
		box-shadow 0 20px 30px 5px rgba(#c0cdd9, .8)
	
	&__num
		display flex
		justify-content center
		align-items center
		position absolute
		padding-top 1px
		padding-left 1px
		top 15px
		left -52px
		height 34px
		width 34px
		z-index 3
		border 2px solid #edf1f3
		background darken(main_color, 5%)
		border-radius 50%
		text-align center
		font-family "AC Boucle"
		font-size 1.28rem
		color #fff
		@media only screen and (max-width 767px)
			left 19px
			top 20px
			width 30px
			height 30px
			border none
	
	&__background
		position absolute
		height 225px
		top 0
		left 0
		right 0
		width 100%
		border-radius 4px 4px 0 0
		background-position center center
		background-repeat no-repeat
		background-size cover
		@media only screen and (max-width 767px)
			height 178px
		
	&__text-block
		position relative
		z-index 2
		padding 20px 30px
		color #333333
		
		@media only screen and (max-width 1199px)
			padding 20px
		
	&__heading
		margin-bottom 17px
		display inline-block
		font-weight 600
		font-size 1.71rem
		border-bottom 2px solid darken(main_color, 5%)
		color #333333
		text-decoration none
		line-height 1.1
		
	&__description
		margin-bottom 23px
		font-size 1.28rem
		line-height 1.2
		@media only screen and (max-width 767px)
			font-size 1.14rem
		
	&__bottom
		display flex
		align-items center
		@media only screen and (max-width 767px)
			flex-wrap wrap
		
	&__button
		margin-right 23px
		display inline-block
		padding 0 20px
		height 40px
		border 2px solid darken(main_color, 5%)
		text-align center
		line-height 37px
		text-transform uppercase
		color darken(main_color, 5%)
		font-size 1rem
		letter-spacing 1px
		font-weight 600
		text-decoration none
		border-radius 3px
		transition .25s all
		
		@media only screen and (max-width 1199px)
			margin-right 15px
			padding 0 10px
		@media only screen and (max-width 767px)
			order 1
			margin 0
		
	&__author
		margin-right 30px
		display flex
		align-items center
		@media only screen and (max-width 1199px)
			margin-right 15px
		@media only screen and (max-width 767px)
			margin-top 15px
			margin-bottom 15px

		&-img
			display inline-block
			margin-right 7px
			border-radius 50%
			height 34px
			width 34px
			border 2px solid #cccccc
			background-size 120%
			background-position center center
			background-repeat no-repeat
		&-name
			font-weight 600
			font-size 1.14rem
			
			@media only screen and (max-width 1199px)
				font-size 1rem
	
	&__statistics
		display flex
		align-items center
		@media only screen and (max-width 767px)
			margin-right 10px
		
	&__views
		margin-right 13px
		position relative
		font-size 1.14rem
		color #b0bec5
		&::before
			display inline-block
			margin-right 3px
			content ""
			position relative
			width 16px
			height 10px
			background url(images/icons.png) -20px -167px
			
	&__shares
		position relative
		font-size 1.14rem
		color #b0bec5
		&::before
			display inline-block
			position relative
			top 2px
			margin-right 7px
			content ""
			position relative
			width 12px
			height 14px
			background url(images/icons.png) -124px -133px
			
	&__links
		flex-grow 1
		height 18px
		text-align right
		@media only screen and (max-width 767px)
			display none
		
	&__link
		position relative
		display inline-block
		margin 0 9px
		
		@media only screen and (max-width 1199px)
			margin 0 6px
		
		&::after
			position absolute
			content ""
			top 50%
			left 50%
			transform translate(-50%, -50%)
			background url(images/icons.png) center center no-repeat
			
		&:hover
			&::after
				filter sepia(85%) saturate(10) brightness(120%) invert(28%) hue-rotate(-341deg)
				
		&:active
			&::after
				filter sepia(85%) saturate(4) brightness(80%) invert(28%) hue-rotate(-331deg)
		
		&_fb
			width 8px
			height 16px
			&::after
				width 8px
				height 16px
				background-position -209px -20px
				
		&_vk
			width 22px
			height 14px
			&::after
				width 22px
				height 14px
				background-position -102px -20px
				
		&_tw
			width 16px
			height 14px
			&::after
				width 16px
				height 14px
				background-position -56px -133px
				
		&_ok
			position relative
			top 1px
			width 10px
			height 18px
			&::after
				width 10px
				height 18px
				background-position -179px -20px
				
	&__category
		position absolute
		top 20px
		right 30px
		display inline-block
		height 30px
		padding 0 19px 0 20px
		text-align center
		line-height 28px
		text-transform uppercase
		letter-spacing 2px
		color #fff
		font-weight 600
		font-size 1rem
		border-radius 2px
		background darken(main_color, 5%)
		@media only screen and (max-width 767px)
			top 20px
			right 10px

		&-icon
			position absolute
			display inline-block
			top 225px
			right 30px
			transform translateY(-50%)
			height 40px
			width 40px
			z-index 3
			border-radius 50%
			border 2px solid darken(main_color, 5%)
			background #fff
			@media only screen and (max-width 767px)
				right 10px
				bottom 0px
				top auto

			&::after
				content: ""
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				background url(images/icons.png) center center no-repeat
			&&_tezaurus
				display none
				@media only screen and (max-width 767px)
					display block
					&::after
						width 20px
						height 16px
						background url(images/tezaurus-mob-icon.png) center center no-repeat
					
	&_tezaurus			
		&-content
			margin-bottom 10px
			position relative
			height 230px
			overflow hidden
			font-family "Source Sans Pro"
			font-size 1.14rem
			
			&-shadow
				position absolute
				height 70px
				left 0
				bottom 0
				width 100%
				background linear-gradient(to bottom, transparent, #fff)
				
		&-dt
			margin-bottom 4px
			font-weight bold
			
		&-dd
			margin-bottom 15px

	&&_tezaurus
		padding-top 0
		
		.preview__button
			&:hover
				color lighten(main_color, 5%)
				border-color lighten(main_color, 5%)
				
			&:active
				color darken(main_color, 15%)
				border-color darken(main_color, 15%)
		
		.preview__background
			display none
			
		.preview__category-icon
			display none
			
		@media only screen and (max-width 767px)
			padding-top 45px
			
			.preview__heading
				display inline
				line-height 1.3
				color #333
				&::after
					content ""
					display block
					margin-top 17px
				
			.preview__description
				margin-bottom 40px
				
			.preview__author
				display none
				
			.preview__statistics
				position absolute
				bottom 155px
				
			.preview_tezaurus-content
				height 70px
				&-shadow
					height 50px
					
			.preview__category-icon
				display block
			
			