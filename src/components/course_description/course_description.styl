.course_description
	padding 49px 0 36px
	font-family 'Source Sans Pro', sans-serif
	
	&__wrap
		max-width 935px
		display flex
		@media only screen and (max-width 767px)
			flex-direction column
	
	&__partner
		margin-right 50px
		@media only screen and (max-width 767px)
			margin-right 0
			margin-bottom 20px

		&-text
			margin-bottom 10px
			color #333333
			font-size 1rem
			letter-spacing 2px
			text-transform uppercase
			font-weight 600
			@media only screen and (max-width 767px)
				font-size .85rem
		&-logo
			width 195px
			@media only screen and (max-width 767px)
				width 170px
	
	&__about
		display none
		margin-bottom 5px
		color #333333
		font-size .85rem
		letter-spacing 2px
		text-transform uppercase
		font-weight 600
		
		@media only screen and (max-width 767px)
			display block

	&__text
		position relative
		margin-bottom 10px
		overflow hidden
		font-size 1.21rem
		color #000
		@media only screen and (max-width 767px)
			font-size 1.14rem
			
		&-shadow
			position absolute
			bottom 0
			left 0
			right 0
			width 100%
			background linear-gradient(to bottom, rgba(255,255,255,0), #fff)
			
	&__button
		width 185px
		height 31px
		line-height 27px
		background #fff
		outline none
		border 2px solid darken(main_color, 10%)
		border-radius 2px
		text-align center
		font-weight bold
		font-size .85rem
		color darken(main_color, 10%)
		text-transform uppercase
		letter-spacing 1px
		cursor pointer
		transition .25s all
		
		&:hover
			color lighten(main_color, 5%)
			border-color lighten(main_color, 5%)
			
		&:active
			color darken(main_color, 15%)
			border-color darken(main_color, 15%)
		
	&__text-block
		&.hide
			.course_description__text
				height 120px
				.course_description__text-shadow
					height 100px
			.course_description__button
				display block
		&.show
			.course_description__text
				height auto
				.course_description__text-shadow
					height 0px
			.course_description__button
				display none